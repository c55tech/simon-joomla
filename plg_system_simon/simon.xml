<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
	<name>PLG_SYSTEM_SIMON</name>
	<author>SIMON Team</author>
	<creationDate>2024-01-01</creationDate>
	<copyright>Copyright (C) 2024 SIMON Team. All rights reserved.</copyright>
	<license>GPL-2.0-or-later</license>
	<authorEmail>support@simon.example.com</authorEmail>
	<authorUrl>https://simon.example.com</authorUrl>
	<version>1.0.0</version>
	<description>PLG_SYSTEM_SIMON_XML_DESCRIPTION</description>
	
	<namespace path="src">Joomla\Plugin\System\Simon</namespace>
	
	<files>
		<filename plugin="simon">simon.php</filename>
	</files>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="enable_cron"
					type="radio"
					label="PLG_SYSTEM_SIMON_FIELD_ENABLE_CRON_LABEL"
					description="PLG_SYSTEM_SIMON_FIELD_ENABLE_CRON_DESC"
					layout="joomla.form.field.radio.switcher"
					default="0"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field
					name="cron_interval"
					type="number"
					label="PLG_SYSTEM_SIMON_FIELD_CRON_INTERVAL_LABEL"
					description="PLG_SYSTEM_SIMON_FIELD_CRON_INTERVAL_DESC"
					default="3600"
					min="60"
				/>
			</fieldset>
		</fields>
	</config>
</extension>

